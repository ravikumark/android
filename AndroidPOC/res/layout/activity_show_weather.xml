<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WeatherInfo">

    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_box_height">

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:background="@drawable/curved_header"
            android:hint="@string/h_search_city"
            android:textColor="@color/dark_gray_color" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/weather_current_layout"
        android:layout_width="match_parent"
        android:layout_height="178dp" >

        <TextView
            android:id="@+id/city_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/orange_color"
            android:textSize="30sp"
            android:textStyle="bold|italic"
			android:gravity="center"/>

        <TextView
            android:id="@+id/temp_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/city_name_textview"
            android:layout_alignBottom="@+id/city_name_textview"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@+id/city_name_textview"
            android:textColor="@color/orange_color"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/temp_weather_imgview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/city_name_textview"
            android:background="@drawable/weather_icon"
            android:textSize="40sp"
            android:textStyle="bold|italic"
            android:gravity="center"
             />

        <TextView
            android:id="@+id/latitude_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/weather_imgview"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/weather_imgview"
            android:textColor="@color/dark_gray_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/latitude_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/latitude_textview"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/weather_imgview"
            android:textColor="@color/orange_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/longitude_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/latitude_value_textview"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/weather_imgview"
            android:textColor="@color/dark_gray_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/longitude_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/longitude_textview"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/weather_imgview"
            android:textColor="@color/orange_color"
            android:textSize="15sp" />
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/weather_history_scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp" >

        <LinearLayout
            android:id="@+id/weather_history_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/monday_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/weather_history"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Monday"
                    android:textColor="@color/dark_gray_color"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/monday_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="3dp"
                    android:text="35*C"
                    android:textColor="@color/dark_gray_color"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tuesday_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/weather_history"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Tuesday"
                    android:textColor="@color/dark_gray_color"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tuesday_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="3dp"
                    android:text="35*C"
                    android:textColor="@color/dark_gray_color"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wednesday_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/weather_history"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/wednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Wednesday"
                    android:textColor="@color/dark_gray_color"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/wednesday_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="3dp"
                    android:text="35*C"
                    android:textColor="@color/dark_gray_color"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thursday_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/weather_history"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/thursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Thursday"
                    android:textColor="@color/dark_gray_color"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/thursday_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="3dp"
                    android:text="35*C"
                    android:textColor="@color/dark_gray_color"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/friday_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/weather_history"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/friday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Friday"
                    android:textColor="@color/dark_gray_color"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/frisday_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="3dp"
                    android:text="35*C"
                    android:textColor="@color/dark_gray_color"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/saturday_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/weather_history"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/saturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Saturdayday"
                    android:textColor="@color/dark_gray_color"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/saturday_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="3dp"
                    android:text="35*C"
                    android:textColor="@color/dark_gray_color"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sunday_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/weather_history"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/sunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Sunday"
                    android:textColor="@color/dark_gray_color"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/sunday_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="3dp"
                    android:text="35*C"
                    android:textColor="@color/dark_gray_color"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>